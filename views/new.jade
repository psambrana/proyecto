extends layout

block content
  .container
    .row.centered-form
      .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title
              | Ingrese el nuevo empleado
          .panel-body
            form(action='',method='post')
              .row
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    label(for='name') Nombre:
                    input(type='text', name='name', id='name', placeholder='Nombre...')
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    label(for='lastnamename') Apellido:
                    input(type='text', name='lastname', id='lastname', placeholder='Apellido...')
              .form-group
                label(for='email') E-Mail:
                input(type='text', name='email', id='email', placeholder='E-Mail...')
              .row
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    label(for='password') Password:
                    input(type='password', name='password', id='password', placeholder='Password...')
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    label(for='confirm') Confirm:
                    input(type='password', name='confirm', id='confirm', placeholder='Confirmacion password...')
              input.btn.btn-info.btn-block(type='submit', value='Crear')
