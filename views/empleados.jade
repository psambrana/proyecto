extends layout

block content
  h1= title
  p=JSON.stringify(persons)
  p=JSON.stringify(flashmsg)
  p
    a(href="/panel/employees/new") New
  table
    tr
      th Id
      th Nombre
      th Apellido
      th E-Mail
      th Options
    - persons.forEach(function(v,i){
    tr
      td=i
      td=v.name
      td=v.lastname
      td=v.email
      td
        a(href="/panel/employees/edit/"+v._id) Edit
        | 
        a(href="/panel/employees/delete/"+v._id) Delete
    - });